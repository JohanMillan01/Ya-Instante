        <section class="principal__recargas">
            <div class="title__recargas-operadores">Recargas a Operadores</div>
            <div class="grid__pagina">
                <div class="grid__recargas">
                    <div class="title__operadores-moviles">Operadores</div>
                    <br>
                        <ul class="logos__operadores">
                        <li class="operador__selection">
                            <img src="/images/claro logo.png" alt="Claro">
                        </li>
                        <li class="operador__selection">
                            <img src="/images/wom logo.png" alt="Wom">
                        </li>
                        <li class="operador__selection">
                            <img src="/images/tigo logo.png" alt="Tigo">
                        </li>
                        <li class="operador__selection">
                            <img class="redondo" src="/images/movistar logo.png" alt="Movistar">
                        </li>
                        <li class="operador__selection">
                            <img src="/images/virgin logo.png" alt="Virgin Mobile">
                        </li>
                        <li class="operador__selection">
