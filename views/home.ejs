                            <img class="redondo" src="/images/etb logo.png" alt="ETB">
                        </li>
                    </ul>
                </div>
                <div class="grid__recargas">
                    <div class="title__operadores-moviles">Paquetes</div>
                    <br>
                    <ul class="logos__operadores">
                        <li class="operador__selection">
                            <img src="/images/claro logo.png" alt="Claro">
                        </li>
                        <li class="operador__selection">
                            <img src="/images/wom logo.png" alt="Wom">
                        </li>
                        <li class="operador__selection">
                            <img src="/images/tigo logo.png" alt="Tigo">
                        </li>
                        <li class="operador__selection">
                            <img class="redondo" src="/images/movistar logo.png" alt="Movistar">
                        </li>
                        <li class="operador__selection">
                            <img src="/images/virgin logo.png" alt="Virgin Mobile">
                        </li>
                        <li class="operador__selection">
                            <img class="redondo" src="/images/flash mobile logo.png" alt="Flash Mobile">
                        </li>
                        <li class="operador__selection">
                            <img src="/images/exito logo.png" alt="Exito">
                        </li>
                        <li class="operador__selection">
                            <img class="redondo" src="/images/etb logo.png" alt="ETB">
                        </li>
                    </ul>
                </div>
            </div>
            <div class="form__historial">
                <div class="table__historial">
                   <table border>
                    <thead>
                        <tr>
                            <th colspan="5">Ultimas Recargas</th>
                        </tr>
                        <tr>
                            <th>Fecha</th>
                            <th>Numero</th>
                            <th>Operador</th>
                            <th>Precio</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>18/06/24</td>
                            <td>3209747373</td>
                            <td>Wom</td>
                            <td>7.500</td>
                            <td>Operacion Exitosa</td>
                        </tr>
                    </tbody>
                   </table>
                </div>
            </div>
            <div class="grid__form">
            <form method="post" id="recargas">
                <div class="form__recargas">
                    <div class="form__number">
                        <label>Número de Telefono</label><br>
                        <input type="number" placeholder="3XXXXXXXXX" autocomplete="off" maxlength="10">
                    </div>
                </div>
                <div class="form__valor">
                    <label>Valor</label>
                    <ul class="list__valor">
                        <li data-recarga="1000"><b>1.000</b></li>
                        <li data-recarga="2000"><b>2.000</b></li>
                        <li data-recarga="3000"><b>3.000</b></li>
                        <li data-recarga="5000"><b>5.000</b></li>
                        <li data-recarga="7000"><b>7.000</b></li>
                        <li data-recarga="10000"><b>10.000</b></li>
                        <li data-recarga="20000"><b>20.000</b></li>
                    </ul>
                    <input type="number" placeholder="XXXXX" autocomplete="off" maxlength="6">
                </div>
                <div class="button__recargar">
                    <input type="submit" value="Recargar">
                </div>    
            </form>
        </div>
        </section>
    </content>
